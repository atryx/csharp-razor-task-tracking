@page
@model Tasker.Pages.IndexModel
@{
}

<h1>All Tasks</h1>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Priority</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => task.Id)</td>
                <td>@Html.DisplayFor(modelItem => task.Title)</td>
                <td>@Html.DisplayFor(modelItem => task.Description)</td>
                <td>@Html.DisplayFor(modelItem => task.Priority)</td>
            </tr>
        }
    </tbody>
</table>